<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  
  <tbody>
    <tr>
      <% @books.each do |book|%>
      <span><td><%= book.title %></td></span>
      <span><td><%= book.body %></td></span>
      <tb><%= link_to "Show", book_path(book.id) %></tb>
      <tb><%= link_to "Edit", edit_book_path(book.id) %></tb>  
      <tb><%= link_to "Destroy", book_path(book.id),method: :delete,"data-confirm" => "AreYouSureï¼Ÿ"  %></tb>
      
      <%end%>
    </tr>
  </tbody>
</table>








<h2>New Book</h2>

<%= form_with model: @book do |f| %>
 <h1>Title</h1>
 <%= f.text_field:title %>
 
 <h1>Body</h1>
 <%= f.text_area:body %>
 
 <%= f.submit 'Create Book' %>
 <%end%>
 
